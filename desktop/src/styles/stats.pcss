.stats {
  position: fixed;
  bottom: 2px;
  left: 3px;
  z-index: var(--layer-fg);

  i {
    text-decoration: underline;
  }

  .right {
    float: right;
  }

  ul {
    height: 100%;
    display: inline;
    overflow: scroll;
    white-space: nowrap;
  }
  
  li {
    display: inline;
    margin-right: 10px;
    
    &.active {
      text-decoration: underline;
      font-weight: bold;
    }
  }
}