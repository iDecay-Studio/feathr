@import "@feathr/shared/styles/anim.pcss" layer(base);
@import "@feathr/shared/styles/themes.pcss" layer(base);
@import "@feathr/shared/styles/components.pcss" layer(components);
@import "@feathr/shared/styles/editor.pcss";
@import "@feathr/shared/styles/cmdbar.pcss";
@import "@feathr/shared/styles/caret.pcss";
@import "@feathr/shared/styles/highlight.pcss";
@import "@feathr/shared/styles/stats.pcss";
@import "@feathr/shared/styles/suggestions.pcss";

:root {
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

  /*layers*/
  --layer-bg: 0;
  --layer-editor: 2;
  --layer-fg: 5;
  --layer-overlay: 100;
}

*, *::before, *::after {
  box-sizing: border-box;
}

* {
  border-style: none;
  scrollbar-color: var(--scrollbar);
}

html, body, #app {
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}

html, body {
  background: var(--bg);
  overflow: hidden;
  tab-size: 2;

  -webkit-animation: fadeIn 0.5s;
  animation: fadeIn 0.5s;
}