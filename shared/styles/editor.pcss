#editor {
  display: block;
  position: absolute;
  z-index: var(--layer-editor);
  margin: 0;
  background-color: transparent;
  overflow: auto;
  color: transparent;
  resize: none;
}

.wrap-text {
  text-wrap: wrap !important;
}

.font-sans {
  font-family: sans-serif;
}
.font-sans-serif {
  font-family: sans, serif;
}
.font-mono {
  font-family: monospace;
}