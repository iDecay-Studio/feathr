{
  "identifier": "main",
  "description": "General permissions",
  "local": true,
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "core:window:allow-toggle-maximize",
    "core:window:allow-minimize",
    "core:window:allow-hide",
    "core:window:allow-close",
    "core:window:allow-set-title",
    "core:window:allow-set-fullscreen",
    "core:window:allow-start-dragging",
    "shell:default",
    "shell:allow-open",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "os:default",
    "os:allow-platform",
    "os:allow-version",
    "os:allow-os-type",
    "os:allow-family",
    "os:allow-arch",
    "os:allow-exe-extension",
    "os:allow-locale",
    "os:allow-hostname"
  ]
}