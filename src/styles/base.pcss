html, body, #app {
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}

#app {
  @apply overflow-hidden
}

* {
  scrollbar-color: rgb(196, 196, 196) rgb(249, 250, 251);
}
:is(.dark ) * {
  scrollbar-color: rgb(11, 18, 27) rgb(31, 41, 55);
}

.dragover::after {
  z-index: 10;
  background-color: rgba(211, 211, 211, 0.75);
}