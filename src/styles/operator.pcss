#operator {
  display: block;
  border-bottom: 0;
  margin-top: 30px;
  position: fixed;
  left: 25vw;;
  line-height: 40px;
  width: calc(75vw - 40px);
  height: 40px;
  overflow: hidden;
  -webkit-user-select: none;
  -webkit-app-region: no-drag;
  bottom: -40px;
  transition: bottom 150ms;
  
  &.active {
    bottom: 0;
  }
}